<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hlju.onlineshop.goods.dao.BrandDao">

    <resultMap type="com.hlju.onlineshop.goods.entity.BrandEntity" id="baseResultMap">
        <result property="brandId" column="brand_id"/>
        <result property="name" column="name"/>
        <result property="logo" column="logo"/>
        <result property="description" column="description"/>
        <result property="showStatus" column="show_status"/>
        <result property="firstLetter" column="first_letter"/>
        <result property="sort" column="sort"/>
    </resultMap>
    <select id="listByIds" resultMap="baseResultMap">
        select brand_id, name, logo, description, show_status, first_letter, sort
        from gms_brand
        where brand_id in
        <foreach collection="brandIds" item="brandId" open="(" close=")" separator=",">
            #{brandId}
        </foreach>
    </select>

</mapper>