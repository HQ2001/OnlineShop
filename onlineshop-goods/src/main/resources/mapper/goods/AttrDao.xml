<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hlju.onlineshop.goods.dao.AttrDao">

    <resultMap type="com.hlju.onlineshop.goods.entity.AttrEntity" id="baeResultMap">
        <result property="attrId" column="attr_id"/>
        <result property="attrName" column="attr_name"/>
        <result property="searchType" column="search_type"/>
        <result property="icon" column="icon"/>
        <result property="valueType" column="value_type"/>
        <result property="valueSelect" column="value_select"/>
        <result property="attrType" column="attr_type"/>
        <result property="enable" column="enable"/>
        <result property="categoryId" column="category_id"/>
        <result property="showDesc" column="show_desc"/>
    </resultMap>
    <select id="listBySearchTypeAndAttrIds" resultMap="baeResultMap">
        select attr_id, attr_name, search_type, icon, value_type, value_select, attr_type, enable, category_id, show_desc
        from gms_attr
        where search_type = #{searchType}
        and attr_id in
        <foreach collection="attrIds" item="attrId" open="(" close=")" separator=",">
            #{attrId}
        </foreach>
    </select>

</mapper>